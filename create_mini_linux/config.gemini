# --- Core Architecture (DO NOT CHANGE) ---
CONFIG_64BIT=y
CONFIG_RISCV=y
CONFIG_MMU=y
CONFIG_RISCV_SBI=y
CONFIG_SMP=y
CONFIG_FPU=y
CONFIG_RISCV_ISA_C=y
CONFIG_RISCV_ISA_A=y
CONFIG_RISCV_ISA_F=y
CONFIG_RISCV_ISA_D=y
CONFIG_CMODEL_MEDANY=y

# --- General Setup ---
CONFIG_INIT_ENV_ARG_LIMIT=32
CONFIG_KERNEL_GZIP=y
CONFIG_CC_OPTIMIZE_FOR_SIZE=y
CONFIG_PRINTK=y
CONFIG_BUG=y

# --- Initramfs support (Essential) ---
CONFIG_BLK_DEV_INITRD=y
CONFIG_INITRAMFS_SOURCE=""
CONFIG_RD_GZIP=y

# --- Essential Virtual Filesystems (DO NOT CHANGE) ---
CONFIG_PROC_FS=y
CONFIG_SYSFS=y
CONFIG_TMPFS=y

# --- Essential Executable Formats ---
CONFIG_BINFMT_ELF=y
CONFIG_BINFMT_SCRIPT=y

# --- Essential Drivers for QEMU 'virt' machine (DO NOT CHANGE) ---
CONFIG_SIFIVE_PLIC=y
CONFIG_SERIAL_8250=y
CONFIG_SERIAL_8250_CONSOLE=y
CONFIG_VIRTIO=y
CONFIG_VIRTIO_MMIO=y
CONFIG_VIRTIO_CONSOLE=y
CONFIG_TTY=y

# --- All other features disabled ---
CONFIG_MODULES=n
CONFIG_NET=n
CONFIG_BLOCK=n
CONFIG_INPUT=n
CONFIG_VT=n
CONFIG_PCI=n
CONFIG_USB_SUPPORT=n
CONFIG_KALLSYMS=n
CONFIG_DEBUG_KERNEL=n
CONFIG_NAMESPACES=n
CONFIG_SYSVIPC=n
CONFIG_CGROUPS=n
CONFIG_PERF_EVENTS=n
CONFIG_BPF_SYSCALL=n
CONFIG_PM=n
CONFIG_TINY_RCU=y```
